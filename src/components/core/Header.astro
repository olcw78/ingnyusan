---
import Nav from "./Nav.astro";
const { title } = Astro.props;
---

<header class="flex-grow py-2 mb-10 navbar-center">
  <div
    class="flex flex-row justify-between items-center mx-[5rem]"
  >
    <button
      type="button"
      id="logo-button"
      class="flex items-center bg-transparent border-0 hover:cursor-pointer"
    >
      <img
        src="/img/ing-logo.png"
        alt={title}
        width={50}
        height={50}
        class="mr-2 max-sm:mr-0 dark:bg-white"
      />
      <p class="text-2xl max-sm:hidden">
        ingnyusan
      </p>
    </button>

    <Nav />
  </div>
</header>

<script>
  const onClickLogoButton = () => {
    window.location.replace(window.location.origin);
  };

  const logoButtonElement = document.getElementById(
    "logo-button"
  )! as HTMLButtonElement;

  logoButtonElement.addEventListener("click", onClickLogoButton);
</script>
