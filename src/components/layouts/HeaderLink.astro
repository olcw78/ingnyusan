---
const { href, isNotFlex, class: className, ...props } = Astro.props;
const { pathname } = Astro.url;
const isActive = href === pathname || href === pathname.replace(/\/$/, "");
---

{!isNotFlex ? (
<div class="flex justify-center items-center">
  <a
    href={href}
    class:list={[
      className,
      { active: isActive },
      "no-underline black hover:font-bold"
    ]}
    {...props}
  >
    <slot />
  </a>
</div> )
  : (
<button class="btn border-0 bg-transparent">
  <a href={href} class:list={[
    className,
    { active: isActive },
    "no-underline black hover:font-bold"
  ]}
     {...props}
  >
    <slot />
  </a></button>
  )}
