---
import HeaderLink from '../components/core/HeaderLink.astro'
---

<div
  class='fixed top-0 left-0 z-10 w-full h-full bg-gray-200 transform opacity-95 duration-300 ease-in-out dark:bg-gray-800 translate-x-0'
>
  <div class='flex justify-end'>
    <button
      type='button'
      class='w-8 h-8 mr-5 rounded mt-11'
      aria-label='Toggle Menu'
    >
      <img src='/svg/close.svg' alt='close icon' />
    </button>
  </div>

  <nav class='fixed h-full mt-8'>
    <ul>
      <HeaderLink href='/about'>어바웃</HeaderLink>
      <HeaderLink href='/category'>카테고리</HeaderLink>
    </ul>
  </nav>
</div>
