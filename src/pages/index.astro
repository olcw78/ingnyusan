---
import { getAllBlogOutlines } from "../cms/getAllBlogOutlines";
import Layout from "../components/layouts/Layout.astro";

const blogOutlines = await getAllBlogOutlines();
---

<Layout>
  <section class="min-h-[85vh]">
    <ul class="list-none p-[unset]">
      {
        blogOutlines.map((blog) => (
          <li class="flex flex-row items-center justify-between px-10 py-10 mb-5 border rounded-sm hover:pointer max-sm:flex-col border-1 border-slate-200">
            <a href={"/blog/" + blog.slug} class="text-xl font-bold">
              {blog.title}
            </a>
            <date>{blog.publishedAt}</date>
          </li>
        ))
      }
    </ul>
  </section>
</Layout>
