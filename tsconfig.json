{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "baseUrl": ".",
    "lib": [
      "es2015",
      "ESNext",
      "ES5",
      "dom",
      "dom.iterable"
    ],
    "target": "ESNext",
    "sourceMap": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "$/*": [
        "public/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}